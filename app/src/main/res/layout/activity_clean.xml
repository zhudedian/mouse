<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="394dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:background="@drawable/menudialog_bg">

    <ImageView
        android:id="@+id/rotation_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/onkeyclean" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rotation_image"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="@string/CleanMaster"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/cleanInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="@string/CleanedMemory"
        android:visibility="invisible" />
    </RelativeLayout>


</RelativeLayout>
